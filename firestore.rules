rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to authenticated users for their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read/write access to family members for family data
    match /families/{familyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to chores for authenticated users
    match /chores/{choreId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to pets for authenticated users
    match /pets/{petId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to pet care records for authenticated users
    match /petCareRecords/{recordId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to rewards for authenticated users
    match /rewards/{rewardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}